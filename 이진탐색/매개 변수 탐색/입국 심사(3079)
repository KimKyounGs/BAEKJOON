#include <bits/stdc++.h>

using namespace std;

vector <int> v; // 심사대에서 심사를 하는데 걸리는 시간.
int N, M;

int main() {
    cin >> N >> M;
    for (int i = 0; i < N; i ++) {
        int time;
        cin >> time;
        v.push_back(time);
    }

    sort(v.begin(), v.end());
    
    long long int start = 0;
    long long int end = (long long int)v[N-1] * M; // 곱셈 할 때 int * int 하면 그 값이 오버플로우 날 수 있기 때문에 형변환을 시킴.
    long long int result =(long long int) v[N-1] * M;
    while(start <= end) {
        long long int mid = (start + end) / 2;

        long long int cnt = 0; // 심사받는 사람 수.
        for (int i = 0; i < N; i++) {
            cnt += mid/v[i];
        }

        // 심사받는 사람 수가 더 많으면, 평균 시간을 단축.
        if (cnt >= M) {
            result = min(result,mid);
            end = mid - 1;
        }
        // 심사받는 사람 수가 더 작다면, 평균 시간을 늘림.
        else {
            start = mid + 1;
        }
    }
    
    cout << result << endl;
}