#include <iostream>
#include <vector>
#include <algorithm>
#include <set>

using namespace std;

int x, y, w, h;

int main() {
    ios::sync_with_stdio(false);
    cin.tie(NULL);

    cin >> x >> y >> w >> h;

    // x, y, w-x, h-y
    if (x <= y && x <= w-x && x <= h-y) {
        cout << x << '\n';
    }
    else if (y <= x && y <= w-x && y <= h-y) {
        cout << y << '\n';
    }
    else if (w-x <= x && w-x <= y && w-x <= h-y) {
        cout << w-x << '\n';
    }
    else {
        cout << h-y << '\n';
    }
}